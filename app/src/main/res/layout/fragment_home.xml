<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">
    <!-- Placeholder Text -->
    <TextView
        android:id="@+id/placeholder_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:text="Go to the map screen and drop pins to get coords"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:padding="16dp" />
    <!-- RecyclerView to display coordinates -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Floating Action Button to clear coordinates -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clear_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:contentDescription="Clear Coordinates"
        android:src="@drawable/ic_clear"
        app:backgroundTint="@android:color/holo_blue_dark" />
</FrameLayout>

